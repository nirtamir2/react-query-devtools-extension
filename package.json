{
  "name": "react-query-devtools-extension",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "format": "prettier **/* --write --ignore-unknown",
    "lint": "pnpm lint-js && pnpm lint-style",
    "lint-js": "eslint --fix **/*.{ts,tsx}",
    "lint-style": "stylelint --fix **/*.css",
    "prepare": "husky install",
    "type-check": "tsc"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "eslint --cache --fix",
    "*.{ts,tsx,css,html,md,mdx,svg}": "prettier --write"
  },
  "devDependencies": {
    "@nirtamir2/prettier-plugin-css-order": "^0.0.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@tsconfig/strictest": "^1.0.0",
    "eslint": "^8.10.0",
    "eslint-config-nirtamir2": "^0.0.24",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "prettier-plugin-packagejson": "^2.2.15",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=6.24.0"
  }
}
